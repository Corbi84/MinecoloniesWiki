---
import type { CraftingCondition } from 'src/content/_wiki';

import RecipeConditionBuilding from './RecipeConditionBuilding.astro';
import RecipeConditionResearch from './RecipeConditionResearch.astro';

interface Props {
  conditions: CraftingCondition[];
}

const { conditions } = Astro.props;
---

{
  conditions.length > 0 &&
    conditions.map(async (condition) => {
      if (condition.type === 'building') {
        return <RecipeConditionBuilding condition={condition} />;
      }

      if (condition.type === 'research') {
        return <RecipeConditionResearch condition={condition} />;
      }

      return undefined;
    })
}
